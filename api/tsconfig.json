{
  "compilerOptions": {
    "outDir": "app/dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
